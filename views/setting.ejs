<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>说说 - 个人设置</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
</head>

<body>
    <% include nav.ejs %>

    <div class="container">
        <h1>说说 - 个人设置</h1>
        <hr>
        <div class="row">
             <div class="col-lg-7 form_box form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="emailTxt" placeholder="Email" value="<%= email %>" disabled>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">昵称</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nicknameTxt" value="<%= nickname %>"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">一句话简介</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="introductionTxt" value="<%= introduction %>"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">头像</label>
                    <div class="col-sm-10">
                        <iframe src="/upload_done" frameborder="0" width="100%" height="300px"></iframe>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label"> </label>
                    <div class="col-sm-10">
                        <button class="btn btn-success" id="submitBtn">提交</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script>
        $("#submitBtn").click(function(){
            $.post("/setting" , {
                "nickname" : $("#nicknameTxt").val(),
                "introduction" : $("#introductionTxt").val()
            },function(data){
                if(data.result == 1){
                    alert("修改成功");
                    window.location = "/";
                }else if(data.result == -1){
                    alert("服务器故障");
                }else if(data.result == -2){
                    alert("昵称中不能有怪异字符");
                }else if(data.result == -3){
                    alert("昵称不能大于15个字符");
                }else if(data.result == -4){
                    alert("昵称中不能有怪异字符");
                }else if(data.result == -5){
                    alert("昵称不能大于15个字符");
                }
            });
        });
    </script>
</body>
</html>